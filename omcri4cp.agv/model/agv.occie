<?xml version="1.0" encoding="ASCII"?>
<occi:Extension xmi:version="2.0" xmlns:xmi="http://www.omg.org/XMI" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:occi="http://schemas.ogf.org/occi/core/ecore" name="AGV" scheme="http://cristal.org/omcri4cp/agv#" specification="">
  <import href="http://schemas.ogf.org/occi/core#/"/>
  <kinds name="AGV" scheme="http://cristal.org/omcri4cp/agv#">
    <attributes name="user" mutable="true" required="true">
      <type xsi:type="occi:StringType" href="http://schemas.ogf.org/occi/core#//@types.0"/>
    </attributes>
    <attributes name="password" mutable="true" required="true">
      <type xsi:type="occi:StringType" href="http://schemas.ogf.org/occi/core#//@types.0"/>
    </attributes>
    <attributes name="ipAddress" mutable="true" required="true">
      <type xsi:type="occi:StringType" href="http://schemas.ogf.org/occi/core#//@types.0"/>
    </attributes>
    <parent href="http://schemas.ogf.org/occi/core#//@kinds[term='resource']"/>
  </kinds>
  <mixins name="Motion" scheme="http://cristal.org/omcri4cp/agv#" applies="//@kinds[term='agv']">
    <attributes name="duration" mutable="true">
      <type xsi:type="occi:NumericType" href="http://schemas.ogf.org/occi/core#//@types.2"/>
    </attributes>
    <attributes name="speed" mutable="true">
      <type xsi:type="occi:NumericType" href="http://schemas.ogf.org/occi/core#//@types.2"/>
    </attributes>
    <attributes name="angle" mutable="true">
      <type xsi:type="occi:NumericType" href="http://schemas.ogf.org/occi/core#//@types.2"/>
    </attributes>
    <actions name="move_forward" scheme="http://cristal.org/omcri4cp/agv/motion/action#"/>
    <actions name="move_backward" scheme="http://cristal.org/omcri4cp/agv/motion/action#"/>
    <actions name="left" scheme="http://cristal.org/omcri4cp/agv/motion/action#"/>
    <actions name="right" scheme="http://cristal.org/omcri4cp/agv/motion/action#"/>
    <actions name="left_diago_forward" scheme="http://cristal.org/omcri4cp/agv/motion/action#"/>
    <actions name="left_diago_backward" scheme="http://cristal.org/omcri4cp/agv/motion/action#"/>
    <actions name="right_diago_forward" scheme="http://cristal.org/omcri4cp/agv/motion/action#"/>
    <actions name="right_diago_backward" scheme="http://cristal.org/omcri4cp/agv/motion/action#"/>
    <actions name="turn_left" scheme="http://cristal.org/omcri4cp/agv/motion/action#"/>
    <actions name="turn_right" scheme="http://cristal.org/omcri4cp/agv/motion/action#"/>
    <actions name="stop" scheme="http://cristal.org/omcri4cp/agv/motion/action#"/>
  </mixins>
  <mixins name="Sensors" scheme="http://cristal.org/omcri4cp/agv#" applies="//@kinds[term='agv']"/>
  <mixins name="IR" scheme="http://cristal.org/omcri4cp/agv#" depends="//@mixins[term='sensors']">
    <actions name="sense_line" scheme="http://cristal.org/omcri4cp/agv/ir/action#"/>
  </mixins>
  <mixins name="Ultrasonic" scheme="http://cristal.org/omcri4cp/agv#" depends="//@mixins[term='sensors']">
    <attributes name="distance" mutable="true">
      <type xsi:type="occi:NumericType" href="http://schemas.ogf.org/occi/core#//@types.2"/>
    </attributes>
    <actions name="sense_distance" scheme="http://cristal.org/omcri4cp/agv/ultrasonic/action#"/>
  </mixins>
</occi:Extension>

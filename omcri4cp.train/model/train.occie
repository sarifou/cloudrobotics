<?xml version="1.0" encoding="ASCII"?>
<occi:Extension xmi:version="2.0" xmlns:xmi="http://www.omg.org/XMI" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:occi="http://schemas.ogf.org/occi/core/ecore" name="Train" scheme="http://cristal.org/omcri4cp/train#">
  <import href="http://schemas.ogf.org/occi/core#/"/>
  <import href="http://occiware.org/cloudrobotics/core#/"/>
  <kinds name="Train" scheme="http://cristal.org/omcri4cp/train#">
    <attributes name="user" mutable="true" required="true">
      <type xsi:type="occi:StringType" href="http://schemas.ogf.org/occi/core#//@types.0"/>
    </attributes>
    <attributes name="ipAddress" mutable="true" required="true">
      <type xsi:type="occi:StringType" href="http://schemas.ogf.org/occi/core#//@types.0"/>
    </attributes>
    <attributes name="trainAddress" mutable="true" required="true">
      <type xsi:type="occi:NumericType" href="http://schemas.ogf.org/occi/core#//@types.2"/>
    </attributes>
    <attributes name="port" mutable="true" required="true">
      <type xsi:type="occi:NumericType" href="http://schemas.ogf.org/occi/core#//@types.2"/>
    </attributes>
    <parent href="http://occiware.org/cloudrobotics/core#//@kinds[term='robot']"/>
  </kinds>
  <mixins name="Motion" scheme="http://cristal.org/omcri4cp/train#" applies="//@kinds[term='train']">
    <attributes name="speed" mutable="true" required="true">
      <type xsi:type="occi:NumericType" href="http://schemas.ogf.org/occi/core#//@types.2"/>
    </attributes>
    <actions name="faster" scheme="http://cristal.org/omcri4cp/train/motion/action#"/>
    <actions name="slower" scheme="http://cristal.org/omcri4cp/train/motion/action#"/>
    <actions name="reverse" scheme="http://cristal.org/omcri4cp/train/motion/action#"/>
    <actions name="stop" scheme="http://cristal.org/omcri4cp/train/motion/action#"/>
    <actions name="setspeed" scheme="http://cristal.org/omcri4cp/train/motion/action#"/>
  </mixins>
  <mixins name="Accessories" scheme="http://cristal.org/omcri4cp/train#" applies="//@kinds[term='train']">
    <attributes name="klaxon" mutable="true" default="OFF" type="//@types.0"/>
    <attributes name="light" mutable="true" default="OFF" type="//@types.0"/>
    <attributes name="trainNoise" mutable="true" default="OFF" type="//@types.0"/>
    <attributes name="wagonNoise" mutable="true" default="OFF" type="//@types.0"/>
    <actions name="setKlaxon" scheme="http://cristal.org/omcri4cp/train/accessories/action#"/>
    <actions name="setlight" scheme="http://cristal.org/omcri4cp/train/accessories/action#"/>
    <actions name="settrainnoise" scheme="http://cristal.org/omcri4cp/train/accessories/action#"/>
    <actions name="setwagonnoise" scheme="http://cristal.org/omcri4cp/train/accessories/action#"/>
  </mixins>
  <types xsi:type="occi:EnumerationType" name="State">
    <literals name="ON"/>
    <literals name="OFF"/>
  </types>
</occi:Extension>

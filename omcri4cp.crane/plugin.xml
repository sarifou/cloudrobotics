<plugin>

   <!-- Register the Crane extension. -->
   <extension point="org.eclipse.cmf.occi.core.occie">
      <occie scheme="http://cristal.org/omcri4cp/crane#" file="model/Crane.occie"/>
   </extension>

   <!-- Define URI mapping. -->
   <extension point="org.eclipse.emf.ecore.uri_mapping">
      <mapping source="http://cristal.org/omcri4cp/crane" target="platform:/plugin/omcri4cp.crane/model/Crane.occie"/>
   </extension>

   <!-- Register the parser for .Crane files. -->
   <extension point="org.eclipse.emf.ecore.extension_parser">
      <parser type="Crane" class="org.eclipse.cmf.occi.core.util.OCCIResourceFactoryImpl"/>
   </extension>

   <!-- Popup menu for converting to an OCCI Configuration file. -->
   <extension point="org.eclipse.ui.popupMenus">
      <objectContribution
            id="omcri4cp.crane.contribution"
            nameFilter="*.Crane"
            objectClass="org.eclipse.core.resources.IFile">
         <menu
               id="org.eclipse.cmf.occi.core.occi-studio.ui.menu"
               label="OCCI Studio"
               path="additionsOCCIStudio">
            <separator name="group"/>
         </menu>
         <action
               class="org.eclipse.cmf.occi.core.ui.popup.actions.ExtensionConfiguration2OCCICAction"
               enablesFor="1"
               id="omcri4cp.crane.ecore2occi"
               label="Convert to an OCCI Configuration File"
               menubarPath="org.eclipse.cmf.occi.core.occi-studio.ui.menu/group">
         </action>
      </objectContribution>
   </extension>
   <extension point="org.eclipse.emf.ecore.generated_package">
      <!-- @generated crane -->
      <package
            uri="http://cristal.org/omcri4cp/crane/ecore"
            class="omcri4cp.crane.CranePackage"/>
   </extension>

</plugin>
